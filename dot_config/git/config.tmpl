[user]
	name = {{ .username }}
	email = {{ .email }}

[color]
	ui = true

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true  # use n and N to move between diff sections

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
[url "https://github.com/"]
	insteadOf = git://github.com/
[http]
	sslBackend = openssl
